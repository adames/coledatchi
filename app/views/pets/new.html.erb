<!-- This page is going to be the adopt a pet page. We should generate a list of pets to adopt -->

<%= form_tag pets_path, method: :post do %>
  <%= label_tag "What do you want to name your pet?" %>
  <%= text_field_tag "pet[name]" %>
  <%= label_tag "Which personality?" %>
  <%= select_tag "pet[personality]", options_for_select(@personalities) %>
  <%= select_tag "pet[species]", options_for_select(@species) %>
  <%= submit_tag "Adopt Pet" %>
<% end %>
