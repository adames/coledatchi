<!-- This page is going to be the adopt a pet page. We should generate a list of pets to adopt -->
<p><%= button_to "Find New Random Pet", new_pet_path, method: 'get' %></p>
<%= image_tag( @pet.picture, :alt => @pet.name) %>
<ul>
<%= form_for @pet do |f| %>
  <li><%= f.label "What do you want to name your pet?" %></li>
  <ul>
    <li><%= f.text_field :name %></li>
  </ul>
  <li><%= f.label :personality %></li>
  <ul>
    <li><%= f.text_field :personality, value: @pet.personality.pet_type, :readonly => true %></li>
  </ul>
  <li><%= f.label :species %></li>
  <ul>
    <li><%= f.text_field :species, value: @pet.species.name,:readonly => true %></li>
  </ul>
  <%= f.hidden_field :picture %>
  <p><%= f.submit "Adopt Pet" %></p>
<% end %>
</ul>
